{
  "path-autocomplete.pathMappings": {
    "/": {
      "conditions": [
        {
          "when": "**/docs/**",
          "value": "${folder}/docs"
        },
        {
          "when": "**/mkdocs.yml",
          "value": "${folder}/docs"
        }
      ]
    },
    "$root": {
      "conditions": [
        {
          "when": "**/docs/**",
          "value": "${folder}/docs"
        },
        {
          "when": "**/mkdocs.yml",
          "value": "${folder}/docs"
        }
      ]
    }
  }
}
